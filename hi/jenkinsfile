pipeline {
    agent any
    stages {
        stage ('vcs') {
            steps {
                git branch 'master',url: 'https://github.com/sureshjala/docker.git'
            }
        }
        stage ('docker image build & pushing to registry') {
            steps {
                sh """
                docker info
                docker image build -t jalasuresh/nopcommerce:1.0 .
                docker image push jalasuresh/nopcommerce:1.0
                """
            }
        }
    }
}